{
	"name": "Ziglang devcontainer",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"ZIG_VERSION": "0.15.2",
			"MINISIGN_VERSION": "0.12"
		}
	},
	"capAdd": [
		"SYS_PTRACE"
	],
	"securityOpt": [
		"seccomp=unconfined"
	],
	"customizations": {
		"vscode": {
			"settings": {
				"[zig]": {
					"editor.codeActionsOnSave": {
						"source.fixAll": "explicit"
					}
				},
				"zig.path": "zig",
				"zig.zls.enabled": "on",
				"zig.zls.path": "zls",
				"zig.zls.enableBuildOnSave": true
			},
			"extensions": [
				"ms-azuretools.vscode-docker",
				"ziglang.vscode-zig",
				"ianic.zig-language-extras",
				"lorenzopirro.zig-snippets",
				"vadimcn.vscode-lldb"
			]
		}
	},
	"remoteUser": "vscode",
	"features": {
		"ghcr.io/devcontainers/features/python:1": {}
	},
	"postCreateCommand": "sudo apt update && sudo apt install -y x11-common libxcursor-dev libxinerama-dev libxi-dev libxrandr-dev libglx-dev",
	"runArgs": [
		// For GPU rendering 
		// "--device=/dev/dri",
		// "--group-add=video",
		// For SW rendering
		"--env=LIBGL_ALWAYS_SOFTWARE=1",
		// ----------------
		"--env=DISPLAY",
		"--volume=/tmp/.X11-unix:/tmp/.X11-unix"
	]
}
